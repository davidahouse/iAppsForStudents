<p><a href="/?platform=mac">Mac</a> | <a href="/?platform=iphone">iPhone</a> |
	<a href="/?platform=ipad">iPad</a></p>

<% last_company = nil %>

<% if @applications != nil %>
<% for a in @applications %>

	<% if last_company != a.company %>
	<h3><%= a.company.title %></h3>
		<% last_company = a.company %>
	<% end %>


<div class="span-24">

<div class="span-4">
	<% if a.icon.exists? %>
	<%= image_tag a.icon.url(:small) %>
	<% end %>
</div>

<div class="span-10">
	<ul>
		<li><%= a.title %></li>
		<li><%= a.description %></li>
		<li><a href="http://<%= a.url %>">Purchase Link</a></li>
	</ul>
</div>

<div class="span-10 last">
	<ul>
		<li>
			<% if ( ( a.discount != nil ) && ( a.discount > 0.0 ) )%>
				<%= a.discount.to_i %> %
			<% end %>
		</li>
		<li>
		
		<% if a.discount_code != '' %>
		
			<%= a.discount_code %>
		
		<% else %>
		
			No discount code required
			
		<% end %>
		
		</li>
		<li><%= a.sale_price %> (<%= a.price_currency%>)</li>
	</ul>
</div>

</div>
	
<% end %>
<% end %>