<% form_for :application, @application, :url => {:action => "saveapp", :id => @application.id } do |f| %>

	<p>Title: <br/>
	<%= f.text_field :title %></p>
	
	<p>Description: <br/>
	<%= f.text_area :description, :size => "60x12" %></p>
	
	<p>Product URL: <br/>
	<%= f.text_field :url %></p>
	
	<p>Discount Code: <br/>
	<%= f.text_field :discount_code %></p>
	
	<p>Icon File:  <br/>
		</p>
	
	<p>Platform:  <br/>
		<%= f.radio_button :platform, "M"%>Mac
		<%= f.radio_button :platform, "P"%>iPhone
		<%= f.radio_button :platform, "D"%>iPad
		<%= f.radio_button :platform, "U"%>Universal
	</p>
	
	<p>
	<%= f.submit %></p>
<% end %>